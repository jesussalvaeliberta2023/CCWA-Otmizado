    <script>

		//Evento para abrir a SubTela1
		document.getElementById("find").addEventListener("click", function () {
			abrirSubTela1();
		});

		//Evento para fechar a SubTela1
		document.getElementById("close").addEventListener("click", function () {
			fecharSubTela1();
		});

		//Evento para fechar a SubTela
		document.getElementById("closee").addEventListener("click", function () {
			fecharSubTela2();
		});
		
		function abrirSubTela1(){
    		var id = document.getElementById('id').value;
   			var teste = document.getElementById('teste').value;

   			if (id == "12345" && teste == "Covid") {
        		document.getElementById("subTela1").style.display = "block";
    		} else {
        		document.getElementById("subTela2").style.display = "block";
    		}
		}
			
		function fecharSubTela1() {
			document.getElementById("subTela1").style.display = "none";
		}

		function fecharSubTela2() {
			document.getElementById("subTela2").style.display = "none";
		}
