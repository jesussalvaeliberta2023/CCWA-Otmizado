    <link href="OiMédico.css" rel="stylesheet" type="text/css" />
    <title>Administrador CCWA</title>
</head>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Alegreya+Sans:wght@300&display=swap');

* {
    font-family: Alegreya Sans;
    margin: 0 auto;
}

html {
    height: 100%;
    width: 100%;
}

#Relat1 {
    position: absolute;
    margin-left: 25px;
    margin-top: 25px;
}

#logout {
    position: absolute;
    margin-left: 25px;
    margin-top: 75px;
}





.cabecalho {
    background-color: #8fffbc;
    background: -webkit-gradient(linear, left top, left bottom, from(#8BFFBC), to(#ffffff));
    border-bottom: solid 1px #000000;
    width: 100%;
    height: 10%;
    position: absolute;
    right: 0%;
    top: 0px;
}

#logo {
    width: 210px;
    height: 70px;
    padding: 10px;
}


#Agendar {
    width: 500px;
    height: 50%;
    position: absolute;
    padding: 20px;
    left: 300px;
    text-decoration: none;
    font-size: 40px;
    font-weight: bold;
    text-align: center;
    color: black;
    margin: 0 auto;
}

#Agendar:hover {
    background-color: #74C895;
    background: -webkit-gradient(linear, left top, left bottom, from(#74C895), to(#ffffff));
    width: 500px;
    height: 50%;
    position: absolute;
    padding: 20px;
    left: 300px;
    text-decoration: none;
    font-size: 40px;
    font-weight: bold;
    text-align: center;
    color: black;
    margin: 0 auto;
}

#subTela1{
    border: solid 1px #000000;
    background-color: #e6e6e6;
	width: 100px;
    height: 100px;
	position: absolute;
	text-align: center;
    transform: translate(-50%, -50%);
    margin-left: 92%;
    margin-top: -33px;
	font-size: 13px;
}

.escolha-data {
    font-size: 30px;
    border-bottom: solid 1px #000000;
    margin-top: 105px;
    padding: 30px 200px;
}


.corpo-agenda{
    width: 1000px;
    margin-top: 10px;
    padding: 30px 200px;
    margin-right: 690px;
}

.casa {
    position: absolute;
    margin-top: -110px;
    margin-left: 1800px;
}

#sair {
    font-size: 19px;
    text-decoration: none;
    font-weight: bold;
    color: #000000;
}

#sair:hover {
    font-size: 19px;
    text-decoration: none;
    font-weight: bold;
    color: #3f92ff;
}
</style>

<body>

    <div class="cabecalho">
            <img src="imagens/Logo.png" id="logo">
            <a href="http://10.144.166.92:3000/adminPage" id="Agendar">Agendamentos e cadastros</a>

        <div class="casa">
            <a id="Relat1">
                <img src="imagens/Login.png">
            </a>
        </div>

        <div id="subTela1" style="display: none;"><br>
            <a href="http://10.144.166.92:3000" id="sair">Logout</a><br><br>
            <h2 id="close">Voltar</h2>
        </div>

        <script>
            //Evento para abrir a SubTela
            document.getElementById("Relat1").addEventListener("click", function () {
                abrirSubTela1();
            });
    
            //Evento para fechar a SubTela
            document.getElementById("close").addEventListener("click", function () {
                fecharSubTela1();
            });
    
            function abrirSubTela1() {
                document.getElementById("subTela1").style.display = "block";
            }
    
            function fecharSubTela1() {
                document.getElementById("subTela1").style.display = "none";
            }
        </script>

    </div>

    <div class="escolha-data">
        <h1 id="escolher-dia">Bem-Vindo(a) Administrador(a)</h1>
    </div>

    <div class="corpo-agenda">
        <h1 id="mensagem">Obeserve as consultas marcadas com os médicos, e os pacientes cadastrados no site, no botão "Agendamentos e cadastros" acima</h1>
    </div>
</body>

</html>