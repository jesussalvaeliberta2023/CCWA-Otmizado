            border-radius: 15px;
            border: none;
            padding: 0px 20px;
            font-size: 20px;
            background-color: #D9D9D9;
        }

        #cpf {
            width: 450px;
            height: 45px;
            border-radius: 15px;
            border: none;
            padding: 0px 20px;
            font-size: 20px;
            background-color: #D9D9D9;
        }


        #cep {
            width: 450px;
            height: 45px;
            border-radius: 15px;
            border: none;
            padding: 0px 20px;
            font-size: 20px;
            background-color: #D9D9D9;
        }

        #tell {
            width: 450px;
            height: 45px;
            border-radius: 15px;
            border: none;
            padding: 0px 20px;
            font-size: 20px;
            background-color: #D9D9D9;
        }


        #cidade {
            width: 450px;
            height: 45px;
            border-radius: 15px;
            border: none;
            padding: 0px 20px;
            font-size: 20px;
            background-color: #D9D9D9;
        }

        #email {
            width: 450px;
            height: 45px;
            border-radius: 15px;
            border: none;
            padding: 0px 20px;
            font-size: 20px;
            background-color: #D9D9D9;
        }


        #sexo {
            width: 450px;
            height: 45px;
            border-radius: 15px;
            border: none;
            padding: 0px 20px;
            font-size: 20px;
            background-color: #D9D9D9;
        }

        .botprosseguir {
            width: 250px;
            height: 50px;
            margin-top: 30px;
            margin-left: 352px;
            border: none;
            border-radius: 30px;
            background-color: #78FFAE;
            font-size: 20px;
            font-weight: bold;

        }

        .btns-1 {
            display: flex;
        }

        .btns-2 {
            display: flex;
        }

        .btns-3 {
            display: flex;
        }

        .btns-4 {
            display: flex;
        }

        .btns-5 {
            display: flex;
        }

        .btns-6 {
            display: flex;
        }

        .espaco {
            position: absolute;
            margin-left: 500px;
            margin-top: -23px;
        }



        .legais {
            font-size: 20px;
            font-weight: bold;
        }

        .cadeistro {
            display: flex;
            margin-left: 509px;
            margin-top: 5px;
            text-decoration: none;
        }

        h2 {
            font-size: 21px;
            color: #000000;
        }

        h3 {
            font-size: 21px;
            margin-left: 10px;
            color: #000000;
        }

        h3:hover {
            color: #1e5aff;
        }
    </style>

    <body>
        <header class="cabecalho">
            <div class="casa">
                <ul>
                    <a href="http://10.144.166.92:3000">
                        <img src="Casinha.png">
                    </a>
                </ul>
            </div><br>
        </header>
    
        <main>
            <div class="logo">
                <img src="Logo.png">
            </div><br><br><br>
    
            <div class="homenzinho">
                <img src="Pesssoa.png">Cadastro do Cliente
            </div>
        
            <div class="tudoo">
                <form method="POST" action="/cadastro">
                    <label class="legais">Nome:</label>
                    <div class="btns-1">
                        <input type="text" name="username" placeholder="Neide Costas" id="nome">
                        <div class="espaco">
                            <label class="legais">Senha:</label><br>
                            <input type="password" name="password" placeholder="******" id="senha">
                        </div>
                    </div><br>

                    <label class="legais">RG:</label>
                    <div class="btns-2">
                        <input placeholder="99.999.999-9" type="text" id="rg">
                        <script>
                            // Adicione a máscara ao campo de RG usando Inputmask
                            $(document).ready(function () {
                                $('#rg').inputmask("99.999.999-9");
                            });
                        </script>
                        <div class="espaco">
                            <label class="legais">Confirme sua senha:</label><br>
                            <input placeholder="******" type="password" id="senha2">
                        </div>
                    </div><br>

                    <label class="legais">CPF:</label>
                    <div class="btns-3">
                        <input type="text" id="cpf" name="cpf" placeholder="999.999.999-99" />
                        <script>
                            // Adicione a máscara ao campo de CPF usando Inputmask
                            $(document).ready(function () {
                                $('#cpf').inputmask("999.999.999-99");
                            });
                        </script>
                        <div class="espaco">
                            <label class="legais">CEP:</label><br>
                            <input type="text" name="CEP" placeholder="199999-99" id="cep" />
                            <script>
                                // Adicione a máscara ao campo de Telefone usando Inputmask
                                $(document).ready(function () {
                                    $('#cep').inputmask("99999-999");
                                });
                            </script>
                        </div>
                    </div><br>

                    <label class="legais">Telefone:</label>
                    <div class="btns-4">
                        <input type="text" id="tell" name="telefone" placeholder="(19) 99999-9999">
                        <script>
                            // Adicione a máscara ao campo de Telefone usando Inputmask
                            $(document).ready(function () {
                                $('#tell').inputmask("(99) 99999-9999");
                            });
                        </script>
                        <div class="espaco">
                            <label class="legais">Número da Residência</label><br>
                            <input type="number" name="cidade" placeholder="799" id="cidade" />
                        </div>
                    </div><br>

                    <label class="legais">Email:</label>
                    <div class="btns-5">
                        <input type="text" name="email" placeholder="example@outlook.com" id="email">
                        <div class="espaco">
                            <label class="legais">Sexo:</label><br>
                            <select id="sexo" name="sexo">
                                <option value="">Selecionar...</option>
                                <option value="masculino">Masculino</option>
                                <option value="feminino">Feminino</option>
                                <option value="outro">Outro</option>
                            </select>
                        </div>
                    </div><br>
                    <button type="submit" class="botprosseguir">Cadastrar</button>
                </form>
            </div>

            <div class="botoes">
                <div class="cadeistro">
                    <h2>Já tem uma conta?</h2>
                    <a href="http://10.144.166.92:3000/login" style="text-decoration: none;">
                        <h3>Entre</h3>
                    </a>
                </div><br><br><br><br>
            </div>
        </main>
    </body>
</html>